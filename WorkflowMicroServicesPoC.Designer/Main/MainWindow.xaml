<Window x:Class="WorkflowMicroServicesPoC.Designer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkflowMicroServicesPoC.Designer"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="600" Width="1200" WindowState="Maximized">
    <Grid Name="grid1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Name="stkMain">
            <Button Name="cmdNew" Click="cmdNew_Click" >
                New
            </Button>
            <Button Name="cmdLoad" Click="cmdLoad_Click" >
                Load
            </Button>
            <Button Name="cmdSave" Click="cmdSave_Click">
                Save
            </Button>
            <Button Name="cmdRun" Click="cmdRun_Click">
                Run
            </Button>
        </StackPanel>

        <ContentControl Grid.Column="1" Content="{Binding Toolbox}" />
        <ContentControl Grid.Column="2" Content="{Binding Designer.View}" />
        <ContentControl Grid.Column="3" Content="{Binding PropertyInspector}" />


    </Grid>
</Window>
